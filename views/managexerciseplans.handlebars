    <td>{{TrainerFN}} {{TrainerLN}}</td>
    <td class="p-2"> <a class= "text-decoration-none b-rounded b-1 m-2 p-1 b-black text-accent-dark bg-transparent hover:bg-white hover:raise-1-white" href="/certs?deleteClient={{this.ClientID}}">Remove Exercise Plan</a> </td>
  </tr>
  {{/each}}
