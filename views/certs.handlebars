<script>
  function deleteCert(id) {
    $.ajax({
      url: '/certs/' + id,
      type: 'DELETE',
      success: function(result) {
        if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
        }
        window.location.reload(true);
      }
    })
  }
</script>


