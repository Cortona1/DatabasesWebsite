<h1 class = "welcome font-xl"> Welcome to the Certifications page! </h1>
<br>
<br>

<section class="container">
<h2> Create new certification form </h2>
  <form method="post" id="myForm">
  <div class="grid-2 md:grid-6-6 m-t-5">
  <label for="name">Enter the name of the certification:</label>
  <input class="bg-transparent b-black m-b-2 focus:bg-white b-rounded b-1 p-2" type="text" name="name" id="toDoName" value="{{name}}" placeholder = "Certification name">
  <span></span>
  <div class="place-x-end">
  <input class="b-rounded b-black text-accent-dark bg-transparent hover:bg-white hover:raise-1-white" type="submit" name="Add Item" value="Add Item" id="tablePost">
  </div>
  </div>
  </form>
</section>

<br>
<br>
<br>
<br>

<section class="grid container">
<h2 class = "font-lg place-x-center m-y-5"> List of current certifications</h2>
</section>



<table class="center">
<tr>
  <th>Certificatins</th>
  <th></th>
<tr>


{{#each results}} 
<tr>
    <td> {{this.CertTitle}} </td>
    <td class="p-2"> <a class= "text-decoration-none b-rounded b-1 m-2 p-1 b-black text-accent-dark bg-transparent hover:bg-white hover:raise-1-white" onClick="deleteCert({{this.CertID}})"> Delete Certification</a> </td>
</tr>
{{/each}}

</table>





