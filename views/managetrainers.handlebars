  <label for="weight">Enter the email of the trainer:</label>
  <input class="bg-transparent b-black m-b-2 focus:bg-white b-rounded b-1 p-2"  type="text" name="email" id="toDoEmail" value="{{email}}"placeholder = "Trainer's email">
  <label for="weight">Enter the name of the certifcate to be added:</label>
  <input class="bg-transparent b-black m-b-2 focus:bg-white b-rounded b-1 p-2"  type="text" name="email" id="toDoTFname" value="{{email}}"placeholder = "Name of the certificate">
  <span></span>
  <div class="place-x-end">
  <input class="b-rounded b-black text-accent-dark bg-transparent hover:bg-white hover:raise-1-white" type="submit" name="Add Item" value="Update" id="tablePost">
  </div>
  </div>
  </form>
</section>
  
