<h2 class ="font-lg place-x-center m-y-5"> Search results are listed below</h2>
</section>




<table class="center" >
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
  </tr>
  {{#each results}}
  <tr>
    <td>{{ClientFN}}</td>
    <td>{{ClientLN}}</td>
    <td>{{ClientEmail}}</td>
  </tr>
  {{/each}}
</table>